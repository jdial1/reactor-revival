{
  "id": "com.jdial.reactor",
  "name": "Reactor Revival",
  "short_name": "Reactor Revival",
  "description": "An incremental reactor simulation game. Build and optimize your reactor, balance power output against heat, unlock upgrades, and harness exotic particles to push your reactor further. Features offline progression and Time Flux acceleration.",
  "start_url": "/reactor-revival/",
  "display": "standalone",
  "display_override": [
    "standalone"
  ],
  "background_color": "#1a1a1a",
  "theme_color": "#303236",
  "orientation": "any",
  "scope": "/reactor-revival/",
  "scope_extensions": [
    { "origin": "/reactor-revival/" }
  ],
  "lang": "en",
  "dir": "ltr",
  "categories": [
    "games",
    "simulation",
    "strategy"
  ],
  "iarc_rating_id": "e84b072d-71b3-4d3e-86ae-31a8ce4e53b7",
  "prefer_related_applications": false,
  "related_applications": [],
  "launch_handler": {
    "client_mode": [
      "navigate-existing",
      "auto"
    ]
  },
  "file_handlers": [
    {
      "action": "/reactor-revival/",
      "accept": {
        "application/json": [
          ".reactor"
        ]
      },
      "icons": [
        {
          "src": "img/parts/cells/cell_1_1-192x192.png",
          "sizes": "192x192",
          "type": "image/png"
        }
      ],
      "launch_type": "single-client"
    }
  ],
  "handle_links": true,
  "protocol_handlers": [
    {
      "protocol": "web+reactor",
      "url": "/reactor-revival/%s"
    }
  ],
  "edge_side_panel": {
    "preferred_width": 400
  },
  "share_target": {
    "action": "/reactor-revival/share-target/",
    "method": "POST",
    "enctype": "multipart/form-data",
    "params": {
      "title": "title",
      "text": "text",
      "url": "url",
      "files": [
        {
          "name": "reactor",
          "accept": [
            "application/json"
          ]
        }
      ]
    }
  },
  "icons": [
