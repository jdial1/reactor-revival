  "widgets": [
    {
      "name": "Reactor Status",
      "tag": "reactor-status",
      "description": "Shows current reactor power and heat levels",
      "screenshots": [
        {
          "src": "img/misc/preview.png",
          "sizes": "600x400",
          "label": "Reactor Status Widget"
        }
      ],
