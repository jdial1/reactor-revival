  "shortcuts": [
    {
      "name": "Start New Game",
      "short_name": "New Game",
      "description": "Start a fresh reactor simulation",
      "url": "/reactor-revival/?action=new",
      "icons": [
        {
          "src": "img/parts/cells/cell_1_1.png",
          "sizes": "64x64",
          "type": "image/png"
        }
      ]
    }
  ],
  "screenshots": [
    {
      "src": "img/misc/preview.png",
